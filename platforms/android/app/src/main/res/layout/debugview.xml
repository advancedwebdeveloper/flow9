<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
   		android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<Button android:id="@+id/update_log_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Update" />
    	<Button android:id="@+id/clear_log_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Clear" />
    	<Button android:id="@+id/minimize_log_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Minimize" />
    	<Button android:id="@+id/close_log_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Close" />
    </LinearLayout>
    <TextView android:id="@+id/log_view"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:scrollbars="vertical"/>
</LinearLayout>
